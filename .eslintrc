{
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"plugins": [
		"html"
	],
	"globals": {
		"NODE": true,
		"__dirname": true,
		"window": true,
		"document": true
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"ObjectExpression": 1
			}
		],
		"linebreak-style": [0],
		"quotes": [
			"error",
			"single"
		],
		"semi": [0],
		"no-console": [0],
		"no-undef": [0]
	}
}